head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Product Form

  // Include the Bootstrap CSS file
  link(rel='stylesheet', href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",crossorigin="anonymous")

  // Include your own CSS file
  link(rel='stylesheet', href='/css/product.css')

body
  div(class="mx-auto my-5 mm container rounded p-4")
    form(method=method, action=action)
        div(class="form-group")
            label(for='id', class='form-label') ID:
            input(type='text', id='id', name='id', value=id, class='form-control' disabled=method==="PUT")
        div(class="form-group")
            label(for='title', class='form-label') Title:
            input(type='text', id='title', name='title', value=title, class='form-control')
        div(class="form-group")
            label(for='price', class='form-label') Price:
            input(type='number', id='price', name='price', value=price, class='form-control')
        div(class="form-group")
            label(for='rating', class='form-label') Rating:
            input(type='number', id='rating', name='rating', value=rating, class='form-control')
        div(class="form-group")
            label(for='stock', class='form-label') Stock:
            input(type='text', id='stock', name='stock', value=stock, class='form-control')
        div(class="form-group")
            label(for='brand', class='form-label') Brand:
            input(type='text', id='brand', name='brand', value=brand, class='form-control')
        div(class="form-group")
            label(for='category', class='form-label') Category:
            input(type='text', id='category', name='category', value=category, class='form-control')
        if method==="POST"
            button(type='submit', class='btn btn-primary mr-2') Create
            button(type='button', class='btn btn-primary',onclick="cancel()") Cancel
        else
            button(type='submit', class='btn btn-primary mr-2') Update
            button(type='button', class='btn btn-primary mr-2',onclick="deleteProduct()") Delete
            button(type='button', class='btn btn-primary mr-2',onclick="cancel()") Cancel
    script(src="/js/cancel.js")
    script(src="https://code.jquery.com/jquery-3.6.3.min.js"
  integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
  crossorigin="anonymous") 
    if method==="PUT"
        script(src="/js/update.js")
        script(src="/js/delete.js")  


